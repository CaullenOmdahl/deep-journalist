# Deep-Journalist Environment Variables

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key  # Get from https://makersuite.google.com/app/apikey

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=60  # Time window in seconds for rate limiting
RATE_LIMIT_REQUESTS=100  # Maximum number of requests allowed per window

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_PATH=logs/deep-journalist.log

# Content Analysis Settings
MIN_CONTENT_LENGTH=100  # Minimum article length to analyze
MAX_CONTENT_LENGTH=50000  # Maximum article length to analyze
BIAS_SCORE_THRESHOLD=0.7  # Threshold for flagging biased content
SOURCE_DIVERSITY_THRESHOLD=3  # Minimum number of unique sources required

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG_MODE=False

# Security Settings
JWT_SECRET_KEY=your-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Cache Configuration
REDIS_URL=redis://localhost:6379/0  # Optional: For caching if implemented
CACHE_TTL=3600  # Cache time-to-live in seconds

# Chrome/Chromium Configuration
CHROME_PATH=/path/to/chrome
CHROME_PROFILE_PATH=/path/to/chrome/profile

# Research Configuration
MIN_PRIMARY_SOURCES=3
NEUTRAL_SCORE_THRESHOLD=0.9
MAX_SEARCH_RESULTS=30
MAX_RESEARCH_TIME=600  # 10 minutes

# Web Scraping
MAX_CONCURRENT_SCRAPES=5
SCRAPING_TIMEOUT=30  # seconds
USER_AGENT="Deep-Journalist Research Bot/1.0"

# Analysis Settings
MIN_PRIMARY_SOURCES=3
MIN_SOURCE_SCORE=0.8
NEUTRAL_LANGUAGE_THRESHOLD=0.9 